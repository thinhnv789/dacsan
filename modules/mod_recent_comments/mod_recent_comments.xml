<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0">
	<name>JoomShopping Recent Comments</name>
	<creationDate>20.12.2012</creationDate>
    <author>MAXXmarketing GmbH</author>
    <authorEmail>marketing@maxx-marketing.net</authorEmail>
    <authorUrl>http://www.webdesigner-profi.de</authorUrl>
    <copyright></copyright>
    <license>Open Source License, GNU GPL</license>
    <version>4.0.2</version>
    <description>Displays Recent Comments.</description>
	<files>
		<filename module="mod_recent_comments">mod_recent_comments.php</filename>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="count"
                    type = "text"
                    default = "10"
                    label="Count Of Recent Comments"
                    description="Count Of Recent Comments"
                     />
                <field
                    name="moduleclass_sfx"
                    type = "text"
                    default = ""
                    label="Module Class Suffix"
                    description="PARAMMODULECLASSSUFFIX" />
           </fieldset>
        </fields>
    </config>
</extension>